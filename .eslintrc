{
  "extends": "airbnb-base",
  "env": {
    "webextensions": true,
    "browser": true
  },
  "rules": {
    "comma-dangle": "off",
    "indent": ["error", 4],
    "no-else-return": "off",
    "no-trailing-spaces": "off",
    "object-shorthand": "off",
    "semi": "off",
    "vars-on-top": "off",
    "object-curly-spacing": "off",
    "no-use-before-define": "off",
    "prefer-template": "off",
    "no-plusplus": "off"
  },
  "globals": {
    "$": true,
    "varDumpModalTools": true,
    "varDumpListenerTools": true,
    "varDumpParsingTools": true,
    "varDumpGenerationTools": true,
    "varDumpParser": true
  }
}