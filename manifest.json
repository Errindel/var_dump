{
  "manifest_version": 2,

  "name": "var_masterpiece",
  "description": "Turn a var_dump into artwork",
  "version": "1.0.0.2",
  
  "icons": {
	"16": "icon16.png",
	"48": "icon48.png",
	"128": "icon128.png"
  },
  
  "permissions": [
    "contextMenus"
  ],
  
  "background": {
    "scripts": ["addContexMenu.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["var_dump.css"],
      "js": ["globals.js", "jquery.js","content.js","jstree.js","textParser.js", "collapse.js","var_dump.js"]
    }
  ],
  
  "options_page": "options.html"
}
